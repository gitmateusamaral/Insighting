<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditInsightCard"
    android:background="#141414">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:src="@drawable/menu"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/name"
        android:src="@drawable/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:onClick="showDialog"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="PROJECTS"
        android:id="@+id/button"
        android:background="#10a092"
        android:layout_marginTop="61dp"
        android:textColor="#fff"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/button"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fillViewport="false"
        android:textAlignment="gravity">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button"
            android:layout_alignParentBottom="true"
            android:id="@+id/grid"
            android:columnCount="2"
            android:rowCount="5">

        </GridLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overlay"
        android:layout_centerInParent="true"
        android:foregroundGravity="center">
    </RelativeLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:maxLength="20"
        android:id="@+id/ic_textTitle"
        android:text="Title"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border"/>

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ic_textDescription"
        android:maxLength="300"
        android:text="Descriçãoshdiohasldjsakldjksajdksaljdksaljdksaljdlsajdklsajdklsajdklsajdklsajkdlsajkdlsajkdlsajkdljsakdljsakldjsajdksaljdsajdksaljdksaljdksajdlksajdlsajd"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
